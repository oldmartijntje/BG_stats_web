<button class="sidebar-toggle" id="sidebarToggle">
    <i class="fas fa-bars"></i>
</button>

<div class="overlay" id="overlay"></div>

<div class="col-lg-3 mb-4">
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="50" cy="50" r="45" fill="var(--primary)" />
                    <text x="50%" y="50%" text-anchor="middle" dominant-baseline="central" font-size="40">ðŸŽ²</text>
                </svg>
            </div>
            <div class="brand-name">Statistics Tracker</div>
        </div>

        <div class="sidebar-body">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/dashboard" data-page="Dashboard">
                        <i class="fas fa-chart-line"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/insights" data-page="Insights">
                        <i class="fas fa-lightbulb"></i> Insights
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/challanges" data-page="Challanges">
                        <i class="fas fa-trophy"></i> Challanges
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/plays" data-page="Plays">
                        <i class="fas fa-play"></i> Plays
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/games" data-page="Games">
                        <i class="fas fa-dice"></i> Games
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/players" data-page="Players">
                        <i class="fas fa-users"></i> Players
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/locations" data-page="Locations">
                        <i class="fas fa-map-marker-alt"></i> Locations
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/settings" data-page="Settings">
                        <i class="fas fa-cog"></i> Settings
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/data_center" data-page="Data Center">
                        <i class="fas fa-database"></i> Data Center
